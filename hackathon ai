  <script>
    // Smooth scroll
    function scrollToSection(id) {
      document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
    }

    // Assessment Generator (Mockup)
    function generateAssessment() {
      const output = document.getElementById("assessment-output");
      output.innerHTML = `
        <ul>
          <li>📝 Q1: Define Machine Learning in simple terms.</li>
          <li>🧮 Q2: Solve: 2x + 3 = 11. Find x.</li>
          <li>💻 Q3: Explain Stack vs Queue with examples.</li>
        </ul>
      `;
    }

    // Analytics Chart
    const ctx = document.getElementById('progressChart');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
        datasets: [{
          label: '📈 Study Progress (%)',
          data: [40, 55, 70, 85],
          borderColor: '#ff758c',
          backgroundColor: 'rgba(255, 118, 150, 0.2)',
          fill: true,
          tension: 0.3
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: { display: true }
        }
      }
    });

    // AI Recommendations (Mock)
    function addRecommendation() {
      const list = document.getElementById("recommend-list");
      const newRec = document.createElement("li");
      const recs = [
        "💡 Solve 10 coding problems in Python",
        "🗂 Revise key SQL queries",
        "⚡ Focus on Time Complexity concepts",
        "📖 Practice previous year exam papers",
        "🔢 Do 5 probability problems"
      ];
      newRec.innerText = recs[Math.floor(Math.random() * recs.length)];
      list.appendChild(newRec);
    }
  </script>

